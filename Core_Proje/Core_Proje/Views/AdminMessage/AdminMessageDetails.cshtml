@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("AdminMessageDetails", "AdminMessage"))
        {
            <div class="card-body">
                <h4 class="card-title">Mesaj Detay Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>ID</label>*@
                        @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Konu</label>
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gönderen Adı</label>
                        @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Alıcı Adı</label>
                        @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Mesaj</label>
                        @Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control" })
                    </div>
                    <a asp-action="ReceiverMessageList" class="btn btn-primary m-2">Admin Gelen Mesajlar</a>
                    <a asp-action="SenderMessageList" class="btn btn-warning m-2">Admin giden Mesajlar</a>
                </form>
            </div>
        }
    </div>
</div>


