@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("AdminMessageSend", "AdminMessage", FormMethod.Post))
        {
            <div class="card-body">
                <h4 class="card-title">Yeni Mesaj Gönderme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <br />
                        <label>Konu</label>
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Alıcı Mail</label>
                        @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x => x.MessageContent,8,3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary m-2">Gönder</button>
                    @Html.ActionLink("İptal", "ReceiverMessageList", "AdminMessage", null, new { @class = "btn btn-outline-danger" })
                </form>
            </div>
        }
    </div>
</div>


