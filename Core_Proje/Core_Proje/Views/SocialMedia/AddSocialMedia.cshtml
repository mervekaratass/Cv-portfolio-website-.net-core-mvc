@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">

        @using (Html.BeginForm("AddSocialMedia", "SocialMedia", FormMethod.Post))
        {
            <div class="card-body">
                <h4 class="card-title">Yeni Hesap Ekleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">İkon</label>
                        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "SocialMedia", null, new { @class = "btn btn-outline-danger" })
                </form>
            </div>
        }
    </div>
</div>

