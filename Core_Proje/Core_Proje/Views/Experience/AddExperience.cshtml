@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">

            @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
            {
            <div class="card-body">
                <h4 class="card-title">Deneyim Ekleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Name,new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description,6,2, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "Experience", null, new { @class = "btn btn-outline-danger" })
                </form>
            </div>
              }
     </div>
    </div>


