@model EntityLayer.Concrete.Skill 
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
        {
            <div class="card-body">
                <h4 class="card-title">Yetenek Ekleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <br />
                        <label>Yetenek Başlığı</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "Skill", null, new { @class = "btn btn-outline-danger" })
                </form>
            </div>
        }
    </div>
</div>
