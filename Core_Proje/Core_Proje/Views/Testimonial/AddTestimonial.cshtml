@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@*taghelperla çalıştık action ve for ile kullandık action hangi metodu asp for sa modelle veritabanından varlıımın hangi propertsin erişmemi sağlaadı*@
<form asp-action="AddTestimonial">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Ekleme Paneli</h4>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.ClientName" />
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    <input type="text" class="form-control" asp-for="@Model.Company" />
                </div>
                <div class="form-group">
                    <label>Görsel Url</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl" />
                </div>
                <div class="form-group">
                    <label>Ünvan</label>
                    <input type="text" class="form-control" asp-for="@Model.Title" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yorum</label>
                    <textarea class="form-control" asp-for="@Model.Comment" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
                @Html.ActionLink("İptal", "Index", "Testimonial", null, new { @class = "btn btn-outline-danger" })
            </div>
        </div>
    </div>
</form>

