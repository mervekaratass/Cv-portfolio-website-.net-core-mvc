@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("Index", "About", FormMethod.Post))
        {<div class="card-body">
            <h4 class="card-title">Hakkımda Düzenleme Paneli</h4>
              <form class="forms-sample">

        @Html.HiddenFor(x => x.AboutID)
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Yaş</label>
        @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
        <br />
        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        <br />
        <label>Adres</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        <br />
        <label>Görsel Yolu</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Description, 10, 2, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
        @Html.ActionLink("İptal", "Index", "Default", null, new { @class = "btn btn-outline-danger" })
    </form>
</div>
        }
    </div>
</div>



