@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("EditService", "Service", FormMethod.Post))
        {
            <div class="card-body">
                <h4 class="card-title">Hizmet Düzenleme Paneli</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceID)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-outline-primary m-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "Service", null, new { @class = "btn btn-outline-danger" })
                </form>
            </div>
        }
    </div>
</div>